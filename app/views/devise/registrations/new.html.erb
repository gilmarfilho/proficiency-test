<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.label :email, "Email" %>
    <%= f.text_field :email, required: true, autofocus: true, class:"form-control" %>
    <%= f.label :password, "Senha" %>
    <%= f.text_field :password, required: true, class:"form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.label :password_confirmation, "Confirme sua senha " %>
    <%= f.text_field :password_confirmation, class:"form-control", required: true, class:"form-control" %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Registrar", class:"btn btn-success pull-right" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
