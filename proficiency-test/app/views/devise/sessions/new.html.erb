<h2>Acessar sua conta</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  	<%= f.label :email, "Email" %>
    <%= f.text_field :email, class:"form-control", required: false, autofocus: true %>
    <%= f.label :password, "Senha" %>
    <%= f.password_field :password, class:"form-control", required: false %>
    <%= f.label :email, "Lembrar deste usuÃ¡rio" %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-primary pull-right" %>
  </div>
<% end %>

