<h2>Alterando <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email, class:"form-control", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.label :password, "Senha" %>
    <%= f.text_field :password, class:"form-control", autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.label :password_confirmation, "Confirme sua senha" %>
    <%= f.text_field :password_confirmation, class:"form-control",required: false %>
    <%= f.text_field :current_password, class:"form-control",hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar", class:"btn btn-primary pull-right" %>
  </div>
<% end %>

<h3>Deletar minha conta</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
