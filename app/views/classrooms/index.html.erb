<h2>Turmas<%= link_to 'Criar', new_classroom_path, class:"btn btn-success pull-right" %></h2>
<br>
<table class="table table-hover">
	<tr>
		<th>Turma</th>
		<th>Curso</th>
		<th>Ações</th>
		<th></th>
	</tr>
	<% @classrooms.each do |classroom| %>
	<tr>
		<th><%= link_to classroom.id, classroom, class:"btn btn-link" %></th>
		<th><%= classroom.course.name %></th>
		<th><%= link_to 'Editar', edit_classroom_path(classroom) %></th>
		<th><%= link_to 'Excluir', classroom_path(classroom), method: :delete, data: { confirm: 'Are you sure?', class:'btn btn-link' } %></th>
	</tr>
	<% end %>
</table>
<%= paginate @classrooms, theme:"twitter-bootstrap-3" %>
